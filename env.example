# База данных
DATABASE_URL="postgresql://username:password@localhost:5432/foodsave"

# Аутентификация
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# API ключи для карт
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Telegram Bot
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_WEBHOOK_URL="https://your-domain.com/api/telegram/webhook"

# SMS сервис для верификации
SMS_API_KEY="your-sms-api-key"
SMS_SENDER="FoodSave"

# Email сервис
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@foodsave.uz"

# Облачное хранилище для изображений
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Redis для кэширования
REDIS_URL="redis://localhost:6379"

# Аналитика
GA_MEASUREMENT_ID="G-XXXXXXXXXX"
YANDEX_METRIKA_ID="12345678"

# Платежные системы (будущая функциональность)
PAYME_MERCHANT_ID="your-payme-merchant-id"
PAYME_SECRET_KEY="your-payme-secret-key"
CLICK_MERCHANT_ID="your-click-merchant-id"
CLICK_SECRET_KEY="your-click-secret-key"

# Push уведомления
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Мониторинг и логирование
SENTRY_DSN="your-sentry-dsn"
LOG_LEVEL="info"

# Безопасность
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key"

# Настройки приложения
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_APP_NAME="FoodSave"
NEXT_PUBLIC_APP_DESCRIPTION="Платформа для поиска товаров со скидками в Узбекистане"

# Лимиты и настройки
MAX_FILE_SIZE="5242880" # 5MB
MAX_PRODUCTS_PER_STORE=100
MAX_IMAGES_PER_PRODUCT=5
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000 # 15 минут

# Настройки кэширования
CACHE_TTL=3600 # 1 час
REDIS_TTL=86400 # 24 часа

# Настройки поиска
ELASTICSEARCH_URL="http://localhost:9200"
SEARCH_INDEX_NAME="foodsave_products"

# Настройки очередей (для фоновых задач)
QUEUE_REDIS_URL="redis://localhost:6379"
QUEUE_CONCURRENCY=5

# Настройки мониторинга
HEALTH_CHECK_URL="http://localhost:3000/api/health"
METRICS_PORT=9090

# Настройки разработки
NODE_ENV="development"
DEBUG="foodsave:*" 